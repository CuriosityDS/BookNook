<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash Screen Style -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/bg</item>
        <item name="android:statusBarColor">@color/bg</item>
        <item name="android:navigationBarColor">@color/bg</item>
    </style>
    <!-- Тема для шрифта Quicksand -->
    <style name="QuicksandFont_regular">
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <!-- Дополнительные настройки шрифта, если нужно -->
    </style>
    <style name="QuicksandFont_medium">
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <!-- Дополнительные настройки шрифта, если нужно -->
    </style>
    <!-- Стиль для кнопки с белым контуром и закругленными углами -->
    <style name="whiteOutlineButtonStyle">
        <item name="android:background">@drawable/transparent_button_background</item>
        <item name="android:fontFamily">QuicksandFont_medium</item>
        <!-- Определенные отступы у букв -->
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:letterSpacing">0.08</item>
    </style>
    <!-- Стиль для кнопки без контура с закругленными углами -->
    <style name="whiteButtonStyle">
        <item name="android:background">@drawable/whitebuttonbackground</item>
        <item name="android:fontFamily">QuicksandFont_regular</item>
        <!-- Определенные отступы у букв -->
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0.08</item>
    </style>

    <!-- Стиль для кнопки с градиентом -->
    <style name="GradientButtonStyleLogin">
        <item name="android:background">@drawable/button_gradient</item>
        <item name="android:textColor">@drawable/button_click_text_color</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.08</item>
    </style>

    <style name="CustomEditTextStyle">
        <item name="android:background">@color/dark_gray</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColorHint">#A5A5A5</item> <!-- Цвет подсказки -->
        <item name="android:textSize">16sp</item> <!-- Размер текста -->
        <item name="android:fontFamily">@font/quicksand_regular</item> <!-- Шрифт QuickSand -->
    </style>

    <style name="titleTextStyle">
        <item name="android:color">@color/white</item>
        <item name="android:fontFamily">QuicksandFont_medium</item>
        <!-- Определенные отступы у букв -->
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

</resources>
